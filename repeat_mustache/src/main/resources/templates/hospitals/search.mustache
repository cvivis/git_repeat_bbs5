{{>layouts/header}}
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#searchList}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href="/hospitals/{{id}}">{{hospitalName}}</a></td>
            <td>{{roadNameAddress}}</td>
        </tr>
    {{/searchList}}
    </tbody>
</table>
<form action="/hospitals/search" method="GET">
    <div class="btn-group" role="group" aria-label="Basic example">
        {{#keyword}}
        <input name="keyword" type="text" value="{{keyword}}" placeholder="검색어를 입력해주세요">
        {{/keyword}}
        <button class="btn btn-secondary">검색</button>
    </div>
</form>

<ul class="pagination justify-content-center">
    {{#keyword}}
        <li class="page-item"><a class="page-link" href="?keyword={{keyword}}&page={{previous}}">Previous</li>
        <li class="page-item"><a class="page-link" href="?keyword={{keyword}}&page={{next}}">Next</li>
    {{/keyword}}
</ul>


